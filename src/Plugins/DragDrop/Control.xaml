<UserControl x:Class="DragDrop.Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragDrop"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="MainGrid">
        <Canvas HorizontalAlignment="Left" Height="270" VerticalAlignment="Top" Width="292">
            <Button Name="Button" 
                AutomationProperties.AutomationId="ButtonID" 
                HorizontalAlignment="Left" 
                Margin="58,101,0,0" 
                VerticalAlignment="Top" 
                Width="150" 
                Padding="5" 
                Content="Dragging WPF Button" 
                MouseLeftButtonUp="OnMouseLeftButtonUp"
                MouseMove="OnMouseMove"
                MouseUp="OnMouseUp"
                />
        </Canvas>
    </Grid>
</UserControl>
